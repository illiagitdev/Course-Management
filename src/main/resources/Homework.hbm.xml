<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.courses.management.homework.Homework" table="home_work" catalog="course_management" schema="public">
    <id name="id" type="java.lang.Integer">
        <column name="id"/>
        <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
            <param name="swquence_name">users_id_sequence</param>
            <param name="increment_size">1</param>
            <param name="optimizer">none</param>
        </generator>
    </id>
        <property name="title" column="title" type="java.lang.String" length="50"/>
        <property name="text" column="text" type="java.lang.String"/>
        <property name="path" type="java.lang.String" column="file_path" length="100"/>

        <many-to-one name="course" column="course_id" class="com.courses.management.course.Course" lazy="false" fetch="select"/>
        <bag name="solutions" table="solution" lazy="false" fetch="select">
            <key><column name="home_work_id"/></key>
            <one-to-many class="com.courses.management.solution.Solutions" />
        </bag>
    </class>
</hibernate-mapping>