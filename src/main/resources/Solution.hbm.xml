<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.courses.management.solution.Solutions" table="solution" catalog="course_management" schema="public">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="swquence_name">users_id_sequence</param>
                <param name="increment_size">1</param>
                <param name="optimizer">none</param>
            </generator>
        </id>
        <property name="text" type="java.lang.String" column="text"/>
        <property name="status" column="status" update="true" insert="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.courses.management.user.UserRole</param>
                <param name="type">java.sql.Types.VARCHAR</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="mark" type="java.lang.Integer"/>

        <many-to-one name="user" column="user_id" class="com.courses.management.user.User" lazy="false" fetch="select"/>
        <many-to-one name="homework" column="home_work_id" class="com.courses.management.homework.Homework" lazy="false" fetch="select"/>
    </class>
</hibernate-mapping>